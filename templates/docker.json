{
  "variables": {
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "commit": true,
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/bash"],
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LEIN_ROOT true",
        "ENV PATH /opt/swagger-codegen/langs/swift-3.1.1-RELEASE-ubuntu16.04/usr/bin/:/root/.sdkman/candidates/kotlin/current/bin/:${PATH}"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provisioners/pre.sh"
    },
    {
      "type": "puppet-masterless",
      "puppet_bin_dir": "/opt/puppetlabs/bin/",
      "extra_arguments": "--debug",
      "staging_directory": "/tmp/packer-swaggy-c",
      "manifest_file": "provisioners/main.pp",
      "module_paths": [
        "modules",
        "modules-extra"
      ]
    },
    {
      "type": "shell",
      "script": "provisioners/post.sh"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "cliffano/swaggy-c",
      "tag": "latest",
      "only": ["docker"]
    }
  ]
}
